<Page x:Class="GH.FilterObjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GH"
      mc:Ignorable="d" 
      d:DesignHeight="610" d:DesignWidth="510"
      Title="FilterObjectPage" Background="#D9D9D9" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="220"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#50CE3B" Opacity="0.10"/>
        <Label Content="Объекты" Grid.ColumnSpan="2" FontSize="35" Foreground="#3C9755" Margin="10,0,0,0" Grid.Row="0"/>
        <Image Source="\Resourses\nameuser.png" Grid.Row="0" Margin="130,18,100,18" Grid.ColumnSpan="2"/>
        <Label x:Name="nameuser" Grid.Row="0" Margin="290,18,10,18" Content="Шакирова Эвелина" FontSize="18" Grid.ColumnSpan="2"/>
        <Grid Grid.Row="3"  Background="White" Opacity="0.5" Margin="15" Grid.ColumnSpan="2"/>
        <Grid Grid.Row="4" Background="White" Opacity="0.5" Margin="15,15,15,60" Grid.ColumnSpan="2"/>
        <Label Content="Тип объекта:" Grid.Row="2" FontSize="15"/>
        <Button Grid.Row="2" Margin="10,27,130,10" Background="#99CE86" BorderBrush="#3C9755" Content="Квартира" FontSize="15" x:Name="apartment_button" Click="apartment_button_Click"/>
        <Button Grid.Row="2" Margin="140,27,10,10" Background="#99CE86" BorderBrush="#3C9755" Content="Комната" FontSize="15" x:Name="room_button" Click="room_button_Click"/>
        <Button Grid.Row="2" Margin="10,27,145,10" Grid.Column="2" Background="#99CE86" BorderBrush="#3C9755" Content="Дом" FontSize="15" x:Name="home_button" Click="home_button_Click"/>
        <Button Grid.Row="2" Margin="120,27,10,10" Grid.Column="2" Background="#99CE86" BorderBrush="#3C9755" Content="Участок" FontSize="15" x:Name="plot_button" Click="plot_button_Click"/>
        <Label Content="Цена:" Grid.Row="3" Grid.Column="0" Margin="15,27,190,130"/>
        <TextBox x:Name="priceFrom_textbox" Grid.Row="3" Grid.Column="0" Margin="70,30,100,150"/>
        <Label Content="От" Grid.Row="3" Grid.Column="0" Margin="47,27,100,150"/>
        <TextBox x:Name="priceBefore_textbox" Grid.Row="3" Grid.Column="0" Margin="170,30,10,150"/>
        <Label Content="До" Grid.Row="3" Grid.Column="0" Margin="150,27,0,150"/>
        <Label Content="Жилая площадь:" Grid.Row="3" Grid.Column="0" Margin="15,70,140,80"/>
        <TextBox x:Name="squareFrom_textbox" Grid.Row="3" Grid.Column="0" Margin="125,75,90,105"/>
        <TextBox x:Name="squareBefore_textbox" Grid.Row="3" Grid.Column="0" Margin="192,75,23,105"/>
        <Label Content="Площадь участка :" Grid.Row="3" Grid.Column="1" Margin="5,27,130,140"/>
        <TextBox x:Name="plotAreaFrom_textbox" IsEnabled="False" Grid.Row="3" Grid.Column="1" Margin="130,30,80,145"/>
        <TextBox x:Name="plotAreaBefore_textbox" IsEnabled="False" Grid.Row="3" Grid.Column="1" Margin="197,30,20,145"/>
        <Label Content="Этаж:" Grid.Row="3" Grid.Column="1" Margin="15,60,180,110"/>
        <TextBox x:Name="floorFrom_textbox" Grid.Row="3" Grid.Column="1" Margin="75,63,135,115"/>
        <TextBox x:Name="floorBefore_textbox" Grid.Row="3" Grid.Column="1" Margin="153,62,20,116"/>
        <Label Content="Количество комнат:" Grid.Row="3" Grid.Column="1" Margin="15,90,100,80"/>
        <TextBox x:Name="numRoomsFrom_textbox" Grid.Row="3" Grid.Column="1" Margin="147,95,72,85"/>
        <TextBox x:Name="numRoomsBefore_textbox" Grid.Row="3" Grid.Column="1" Margin="200,95,20,85"/>

        <Label Content="Город:" Grid.Row="4" Grid.Column="0" Margin="20,27,180,160"/>
        <TextBox x:Name="city_textbox" Grid.Row="4" Grid.Column="0" Margin="70,35,70,170"/>
        <Label Content="Район:" Grid.Row="4" Grid.Column="0" Margin="20,60,180,130"/>
        <TextBox x:Name="district_textbox" Grid.Row="4" Grid.Column="0" Margin="70,66,30,137"/>
        <Label Content="Адрес:" Grid.Row="4" Grid.Column="0" Margin="20,90,180,90"/>
        <TextBox x:Name="address_textbox" Grid.Row="4" Grid.Column="0" Margin="70,95,30,110"/>

        <Button Name="filter_button" Grid.Row="4"  Background="#99CE86" Grid.ColumnSpan="2" BorderBrush="#3C9755" Margin="140,165,190,20" Click="filter_button_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
            <StackPanel Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Применить фильтрацию</TextBlock>
                <Image Source="\Resourses\addob(add).png" Height="25" Width="36"/>
            </StackPanel>
        </Button>
        <Button Name="clear_button" Grid.Row="4"  Background="#99CE86" Grid.ColumnSpan="2" BorderBrush="#3C9755" Margin="330,165,10,20" Click="clear_button_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
            <StackPanel Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Отменить фильтрацию</TextBlock>
                <Image Source="\Resourses\delete(add).png" Height="25" Width="38"/>
            </StackPanel>
        </Button>
        <Label Content="От" Grid.Row="3" Grid.Column="0" Margin="106,70,118,107"/>
        <Label Content="До" Grid.Row="3" Grid.Column="0" Margin="170,70,53,107"/>
        <Label Content="От" Grid.Row="3" Grid.Column="1" Margin="110,28,115,148"/>
        <Label Content="До" Grid.Row="3" Grid.Column="1" Margin="175,27,48,150"/>
        <Label Content="От" Grid.Row="3" Grid.Column="1" Margin="49,60,174,116"/>
        <Label Content="До" Grid.Row="3" Grid.Column="1" Margin="124,60,99,117"/>
        <Label Content="От" Grid.Row="3" Grid.Column="1" Margin="127,90,96,87"/>
        <Label Content="До" Grid.Row="3" Grid.Column="1" Margin="178,90,45,87"/>
    </Grid>
</Page>

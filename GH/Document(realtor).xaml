<Page x:Class="GH.Document_realtor_"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GH"
      mc:Ignorable="d" 
      d:DesignHeight="610" d:DesignWidth="510"
      Title="Document_realtor_" Background="#D9D9D9" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="450"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#50CE3B" Opacity="0.10"/>
        <Label Content="Договора" Grid.ColumnSpan="2" FontSize="35" Foreground="#3C9755" Margin="10,0,0,0" Grid.Row="0"/>
        <Image Source="\Resourses\nameuser.png" Grid.Row="0" Margin="130,18,100,18"/>
        <Label x:Name="nameuser" Grid.Row="0" Margin="290,18,10,18" Content="Шакирова Эвелина" FontSize="18"/>
        <TextBox x:Name="search_textbox" Grid.Row="2" Margin="10,0,210,1" BorderBrush="Black" Background="#C8C6C6"/>

        <Button Name="search_button"  Background="Transparent" Grid.Row="2" Margin="310,0,160,0" BorderBrush="Black" Click="search_button_Click" >
            <Image Source="\Resourses\search.png" Height="25" Width="38"/>
        </Button>

        <ComboBox x:Name="Filter_combox" SelectedIndex="0" Grid.Row="2" Margin="360,0,5,0">
            <ComboBoxItem Content="Все"/>
            <ComboBoxItem Content="Купли"/>
            <ComboBoxItem Content="Продажи"/>
        </ComboBox>

        <Button Name="addDoc_button" Grid.Row="3"  Background="#99CE86" BorderBrush="#3C9755" Margin="10,5,340,0" Click="addDoc_button_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
            <StackPanel Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Добавить договор</TextBlock>
                <Image Source="\Resourses\addDocument.png" Height="27" Width="47"/>
            </StackPanel>
        </Button>
        <Button Name="deliteDoc_button" Grid.Row="3"  Background="#99CE86" BorderBrush="#3C9755" Margin="190,5,135,0" Click="deliteDoc_button_Click"  >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
            <StackPanel Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Удалить договор</TextBlock>
                <Image Source="\Resourses\delete.png" Height="27" Width="47"/>
            </StackPanel>
        </Button>

        <ListBox x:Name="DocumentsListBox" Grid.Row="5" Margin="10" HorizontalContentAlignment="Stretch"/>
    </Grid>
</Page>

